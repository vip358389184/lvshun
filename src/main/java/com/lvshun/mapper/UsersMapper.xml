	</insert>-->
	<insert id="addUser"  parameterType="com.lvshun.po.Users" >
		INSERT INTO users(
		userid,username,password
		)VALUES(
		#{0},#{1},#{2}
		)
	</insert>

	<!-- 查询用户 详细 -->
	<select id="getById"  parameterType="com.lvshun.po.Users" resultType="com.lvshun.po.Users" >
		select
		userid,username,password
		from users
		where userid=#{userid}
	</select>
	<!-- 查询用户 -->
	<select id="findAll"  parameterType="com.lvshun.po.Users" resultType="com.lvshun.po.Users">
		select
		*
		from users
	</select>
	<!-- 删除用户 -->
	<delete id="delete" parameterType="com.lvshun.po.Users">
		delete from users where user_id=#{id}
	</delete>
	<!-- 修改用户 -->
	<update id="update" parameterType="com.lvshun.po.Users" >
		UPDATE users AS T SET
		T.user_id=#{userId},
		T.type =#{type},
		T.password=#{password},
		T.nickname=#{nickName},
		T.email=#{email},
		T.username=#{userName},
		T.phone = #{phone},
		T.address =#{address},
		T.integral = #{integral},
		T.grade =#{grade},
		T.joindate=#{joindate},
		T.collect=#{collect},
		T.monetary =#{monetary}
		WHERE T.ecid=#{ecId}
	</update>
</mapper>